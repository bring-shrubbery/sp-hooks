    "@use-search-params-state/eslint-config": "workspace:*",
    "@use-search-params-state/tsconfig": "workspace:*",
    "eslint": "^8",
    "next": "^14",
    "react": "^18",
    "react-dom": "^18",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "next": "^13 || ^14",
    "react": "^18 || ^17"
